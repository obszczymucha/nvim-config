{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh","zsh"],
      "ignoredRootPaths": ["~"]
    },
    "lua": {
      "command": "lua-language-server",
      "filetypes": [ "lua" ],
      "settings": {
        "Lua": {
          "diagnostics": {
            "globals": [ "vim" ]
          }
        }
      }
    }
  }
}

